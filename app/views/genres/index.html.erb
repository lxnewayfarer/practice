
<p id="notice"><%= notice %></p>

<h1 class="title ">Genres</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <%- if current_user and current_user.login == 'admin' %>
        <td><%= link_to 'Show', genre %></td>
        <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
        <td><%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%- if current_user and current_user.login == 'admin' %>
<%= link_to 'New Genre', new_genre_path, class: "button" %>
<% end %>

