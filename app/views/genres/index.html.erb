<%= render "/navbar" %>
<p id="notice"><%= notice %></p>

<h1 class = "title">Genres</h1>

<%= search_form_for @q do |f| %>
  <%= f.label 'Name' %>
  <%= f.search_field :name_cont %>

  <%= f.submit "search" %>
<% end %>


<table class = "table">
  <tr>
    <th> <%= sort_link @q, :name, "Genre"%></th>
  </tr>
  <% @genres.each do |genre| %>
  <tr>
    <td>#<%= link_to genre.name, genre %></td>    
  </tr>
  <% end %>
</table>