<%= render "/navbar" %>
<p id="notice"><%= notice %></p>

<h1 class = 'title'>Albums</h1>

    <% @albums.each do |album| %>
    <div class="box">
    <figure class="image is-64x64">
          <%= link_to image_tag(album.cover_url), album %>
    </figure>
        <%= link_to album.name, album, class: 'bold subtitle' %>
        (<%= album.release.year %>) by 
        <%= link_to album.group.name, album.group, class: 'bold' %>
        
        <%= link_to 'Edit', edit_album_path(album) %>
        <%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>


<br>

<%= link_to 'New Album', new_album_path %>
