<div class="column is-two-fifths">

<h1 class="title">Log in</h1>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <label class="label">E-mail</label>
      <div class="control">
        <%= f.input_field :email, 
                    label: false,
                    required: true,
                    placeholder: 'E-mail',
                    class: 'input',
                    autofocus: true %>
      </div>
    </div>
    <div class="field">
      <label class="label">Password</label>
      <div class="control">
        <%= f.input_field :password,
                input_html: { class: 'input is-primary' },
                label: false,
                required: true,
                placeholder: 'Password',
                class: 'input',
                autofocus: true,
                wrapper_html: false  %>
      </div>
    </div>
    <div class="field">
    <div class="control">
      
         <%= f.input_field :remember_me,
                      as: :boolean if devise_mapping.rememberable? %>
      <label class="checkbox">Remember me</label>
    </div>
  </div>
   
    
   

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

