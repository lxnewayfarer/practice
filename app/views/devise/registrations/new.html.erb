<div class="column is-two-fifths">

<h1 class="title">Sign up</h1>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="field">
      <label class="label">E-mail</label>
      <div class="control">
        <%= f.input_field :email, 
                    label: false,
                    required: true,
                    placeholder: 'E-mail',
                    class: 'input',
                    autofocus: true %>
      </div>
    </div>
    <div class="field">
      <label class="label">Login</label>
      <div class="control">
        <%= f.input_field :login,
                input_html: { class: 'input is-primary' },
                label: false,
                required: true,
                placeholder: 'Login',
                class: 'input',
                autofocus: true,
                wrapper_html: false  %>
      </div>
    </div> 
    <div class="field">
      <label class="label">Password</label>
      <div class="control">
        <%= f.input_field :password,
                input_html: { class: 'input is-primary' },
                label: false,
                required: true,
                placeholder: 'Password',
                class: 'input',
                autofocus: true,
                wrapper_html: false  %>
      </div>
      <div class="control">
        <%= f.input_field :password_confirmation,
                input_html: { class: 'input is-primary' },
                label: false,
                required: true,
                placeholder: 'Password confirmation',
                class: 'input',
                autofocus: true,
                wrapper_html: false  %>
      </div>
    </div> 
    
   

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>